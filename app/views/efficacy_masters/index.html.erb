<p id="notice"><%= notice %></p>

<h1>Efficacy Masters</h1>

<p><%= link_to "薬効分類表", "http://www.mhlw.go.jp/shingi/2009/11/dl/s1106-11v.pdf" %></p>
<p>s1106-11v.pdf → efficacy_master.csv</p>

<div class="panel panel-default">
  <div class="panel-body">
    <%= form_tag(import_efficacy_masters_path, :method => :post, multipart: true) do %>
        <div class="form-group">
          <%= file_field_tag :csv_file %>
        </div>
        <%= submit_tag "CSVインポート", :class => "btn btn-primary" %>
    <% end %>
  </div>
</div>

<p><%= link_to '全削除', delete_all_efficacy_masters_path, :method => :delete %></p>
<p><%= link_to '新規登録', new_efficacy_master_path %></p>

<p><%= page_entries_info @efficacy_masters %></p>
<p><%= paginate @efficacy_masters %></p>

<table>
  <thead>
    <tr>
      <th>薬効分類コード</th>
      <th>薬効分類名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @efficacy_masters.each do |efficacy_master| %>
      <tr>
        <td><%= efficacy_master.code %></td>
        <td><%= efficacy_master.name %></td>
        <td><%= link_to 'Show', efficacy_master %></td>
        <td><%= link_to 'Edit', edit_efficacy_master_path(efficacy_master) %></td>
        <td><%= link_to 'Destroy', efficacy_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= paginate @efficacy_masters %></p>
